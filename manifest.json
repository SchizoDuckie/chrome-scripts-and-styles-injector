{
    "name": "Pimp My TR",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Select2's voor in TR! Met fuzzy search!",
    "permissions": ["tabs", "activeTab", "storage"],
    "content_scripts": [{
        "matches": [
            "*://tr.samson-it.nl/tijdregistratie/dag.php*",
            "*://support.samson-it.nl/"
        ],
        "all_frames": true,
        "css": ["select2.min.css"],
        "js": ["jquery.min.js","listener.js"],
        "run_at": "document_idle"
    }],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "logo.png",
        "default_popup": "minitr.html"
    },
    "options_page": "options.html",
    "icons": {
        "48": "logo.png"
    },
    "web_accessible_resources": ["pimp-tr.js", "pimp.css", "select2.png", "select2-spinner.gif", "script.js", "select2.min.js", "select2.min.css", "go.js"]
}